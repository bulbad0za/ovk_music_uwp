<Application
    x:Class="OVK_Music.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OVK_Music"
    RequestedTheme="Dark">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <!-- Светлая тема -->
                    <SolidColorBrush x:Key="PlayerControlBackgroundBrush" Color="#EFEFEF"/>
                    <SolidColorBrush x:Key="AudioListItemBackgroundBrush" Color="Transparent"/>
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <!-- Темная тема -->
                    <SolidColorBrush x:Key="PlayerControlBackgroundBrush" Color="#333333"/>
                    <SolidColorBrush x:Key="AudioListItemBackgroundBrush" Color="Transparent"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <!-- Общие ресурсы -->
            <Style x:Key="PlayerButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="8"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>

</Application>
   